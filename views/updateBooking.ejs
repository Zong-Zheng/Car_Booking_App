<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Update Booking</title>
</head>
<body>
    <%- include ('bar/navbar.ejs') %>
    <div class="container mt-3">
        <h2>Update Booking</h2>

        <% if (updatebooking) { %> 
            <form action="/bookings/<%= updatebooking.booking_id %>/update" method="post" enctype="multipart/form-data">
                <div class="mb-3 mt-3">
                    <label for="number">Car Number:</label>
                    <input type="text" class="form-control" id="number" name="number" value="<%= updatebooking.number %>" readonly>
                </div>

                <div class="mb-3 mt-3">
                    <label for="bookingdate">Booking Date:</label>
                    <input type="date" class="form-control" id="bookingdate" name="bookingdate" value="<%= updatebooking.bookingdate.toISOString().split('T')[0] %>" readonly>
                </div>

                <div class="mb-3 mt-3">
                    <label for="bookedby">Booked By:</label>
                    <input type="text" class="form-control" id="bookedby" name="bookedby" value="<%= updatebooking.bookedby %>" readonly>
                </div>

                <div class="mb-3 mt-3">
                    <label for="startdate">Start Date:</label>
                    <input type="date" class="form-control" id="startdate" name="startdate" value="<%= updatebooking.startdate.toISOString().split('T')[0] %>">
                </div>

                <div class="mb-3 mt-3">
                    <label for="enddate">End Date:</label>
                    <input type="date" class="form-control" id="enddate" name="enddate" value="<%= updatebooking.enddate.toISOString().split('T')[0] %>">
                </div>

                <label for="image">Current Image:</label><br>
                <input type="text" id="image1" name="currentImage" value="<%= updatebooking.image %>" class="form-control" disabled>
                <img src="/images/<%= updatebooking.image %>" width="20%" alt="Car Style"><br>

                <label for="img">New Style:</label>
                <input type="file" id="img" name="image" class="form-control" accept="image/*"><br><br>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        <% } else { %>
            <p>No booking found.</p>
        <% } %>
        <a href="/">Back</a>
    </div>
</body>
</html>